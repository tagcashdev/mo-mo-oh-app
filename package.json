{
  "name": "mo-mo-oh-app",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main/main.js",
  "author": "TagCash <TagCashDev@gmail.com>",
  "description": "Une application pour g√©rer votre collection de cartes Yu-Gi-Oh!",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx,cjs --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:start": "electron .",
    "start": "concurrently \"npm run dev\" \"npm run electron:dev-wait\"",
    "electron:dev-wait": "cross-env NODE_ENV=development electron . --inspect",
    "electron:build": "vite build && npx electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "electron-is-dev": "^3.0.1",
    "node-fetch": "^2.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.3.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^3.1.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "com.votre-nom.momooh",
    "productName": "Mo-Mo-Oh!",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}